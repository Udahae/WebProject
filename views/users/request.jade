.container
    h1.page-header Request
    
    table.table.table-bordered
      thead
        tr
          th 요청인
          th Room
          th 체크인
          th 체크아웃
          th 인원
          th 상황
          th
      tbody
        each host in hosts
          tr
            td= host.send_email
            td 
              a(href='/rooms/detail/#{host.room_id}') Room 확인
            td= moment(host.checkin).format('YYYY-MM-DD')
            td= moment(host.checkout).format('YYYY-MM-DD')
            td= host.persons
            td= host.result
            td
              a.btn.btn-xs.btn-default(href='/books/#{host._id}/accept') 수락
              | 
              a.btn.btn-xs.btn-default(href='/books/#{host._id}/reject') 거절